---
import { formatName } from "../utils/utilities.ts";

const loggedUser: User = {
  id: "1",
  firstName: "John",
  lastName: "Doe",
  email: "lawrenceseugn025@gmail.com",
};

const { email } = Astro.props;

interface Props {
  email: string;
}
---

<div
  class="grid grid-cols-[2.2fr,9.8fr] px-5 sm:px-10 py-5 w-full h-auto bg-feintWhite shadow-md fixed top-0 z-50"
>
  <a href=`/dashboard/user/${loggedUser.id}` class="font-semibold text-[16px]">
    Hello, {formatName(loggedUser)} - {email}
  </a>
  <div class="flex justify-between items-center">
    <p class="text-sm">#1 : Task - Customer First Name</p>
    <button class="cursor-help">
      <img src="/questionMark.svg" alt="" class="w-6" />
    </button>
  </div>
</div>
